<Page x:Class="Shelter.Pages.NotificationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shelter.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="NotificationsPage">

    <StackPanel HorizontalAlignment="Center">
        <TextBlock HorizontalAlignment="Center">Уведомления</TextBlock>
        <ScrollViewer Height="400" Width="730" HorizontalAlignment="Center">
            <TextBox x:Name="text" IsReadOnly="True" Width="700" TextWrapping="Wrap" HorizontalAlignment="Center"></TextBox>
        </ScrollViewer>

    </StackPanel>
</Page>
